<body>
   <div class="container">
        <div class="language-dropdown" style="position: absolute; top: 10px; right: 10px;">
            <%= form_with url: switch_language_path, method: :post, data: { turbolinks: false } do %>
                <select name="language" onchange="this.form.submit()">
                    <option value="en"><%= t('language.english') %></option>
                    <option value='zh-TW'><%= t('language.chinese') %></option>
                    <option value="ta"><%= t('language.tamil') %></option>
                </select>
            <% end %>
        </div>    

        <br>
        <%= link_to t('signup_button'), mobileno_path, class: 'button', id: 'SignUpforDigibankButton' %>
        <br>
        <%= link_to t('login_button'), login_path, class: 'button', id: 'LogInButton' %>
    </div>
</body>
