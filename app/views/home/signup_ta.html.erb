<%= stylesheet_link_tag 'signup', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'controllers/home', crossorigin: 'anonymous' %>

<body>
   <div class="container">
        <div class="language-dropdown" style="position: absolute; top: 10px; right: 10px;">
            <%= form_with url: switch_language_path, method: :post do %>
                <select name="language" onchange="this.form.submit()">
                    <option value="en">English</option>
                    <option value="zh">中文</option>
                    <option value="ta" selected>தமிழ்</option>
                </select>
            <% end %>
        </div> 
        <br>
        <%= link_to 'டிஜிபாங்க் பதிவு செய்யவும்', new_ta_path, class: 'button', id: 'SignUpforDigibankButton' %>
        <br>
        <%= link_to 'உள்நுழைய', new_ta_path, class: 'button', id: 'LogInButton' %>
    </div>
</body>
