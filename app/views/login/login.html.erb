<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'controllers/home', crossorigin: 'anonymous' %>

<body>
    
    <div class="container">
        <div class="language-selector">
            <div class="dropdown-menu">
              <%= link_to "English", change_locale_path(:en), class: "dropdown-item" %>
              <%= link_to "தமிழ்", change_locale_path(:ta), class: "dropdown-item" %>
              <%= link_to "简体中文", change_locale_path(:'zh-CN'), class: "dropdown-item" %>
            </div>
        </div>


        <div class="header">
            <%= image_tag 'DBS-Bank-logo.png', alt: 'DBS', class: 'resized-image' %>
        </div>
        <!-- Language Selector Buttons -->
        
        <div class="form-container">
            <h1><%= t('login.title') %></h1>
            <%= form_with url: login_authentication_path, method: :post, local: true do |f| %>
                <div class="input-group">
                    <%= f.text_field :full_name, placeholder: t('login.full_name_placeholder'), required: true %>
                </div>
                <div class="input-group">
                    <div class="phone-input">
                        <%= f.select :country_code, options_for_select([
                            ['🇸🇬 +65', '+65'],
                            ['🇲🇾 +60', '+60'],
                            ['🇨🇳 +86', '+86'],
                            ['🇺🇸 +1', '+1'],
                            ['🇬🇧 +44', '+44'],
                            ['🇮🇳 +91', '+91'],
                            ['🇦🇺 +61', '+61'],
                            ['🇯🇵 +81', '+81'],
                            ['🇩🇪 +49', '+49'],
                            ['🇫🇷 +33', '+33'],
                            ['🇮🇹 +39', '+39'],
                            ['🇷🇺 +7', '+7'],
                            ['🇪🇸 +34', '+34'],
                            ['🇧🇷 +55', '+55'],
                            ['🇿🇦 +27', '+27'],
                            ['🇰🇷 +82', '+82']
                        ], '+65'), required: true %>
                        <%= f.telephone_field :phone_number, placeholder: t('login.phone_number_placeholder'), required: true %>
                    </div>
                </div>
                <div class="input-group">
                    <%= f.password_field :password, placeholder: t('login.password_placeholder'), required: true %>
                </div>
                <div class="checkbox-group">
                    <%= f.check_box :terms, required: true %>
                    <label for="terms"><%= t('login.terms_label') %></label>
                </div>
                <div class="checkbox-group">
                    <%= f.check_box :promotions %>
                    <label for="promotions"><%= t('login.promotions_label') %></label>
                </div>
                <div class="checkbox-group">
                    <%= f.check_box :remember %>
                    <label for="remember"><%= t('login.remember_label') %></label>
                </div>
                <%= f.submit t('login.submit_otp'), class: 'button', id: 'GetOTPButton' %>
                <%= f.submit t('login.submit_biometrics'), class: 'button', id: 'Biometrics' %>
            <% end %>
        </div>
    </div>
</body>
</html>
