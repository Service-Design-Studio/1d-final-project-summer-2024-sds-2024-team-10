<%= stylesheet_link_tag 'signup', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'controllers/home', crossorigin: 'anonymous' %>

<body>
   <div class="container">
        <div class="language-dropdown" style="position: absolute; top: 10px; right: 10px;">
            <div class="dropdown">
                <button class="dropbtn">
                    <%= t("languages.#{I18n.locale}") %>
                </button>
                <div class="dropdown-content">
                    <%= link_to t("languages.en_name"), change_locale_path(:en), class: "dropdown-item" %>
                    <%= link_to t("languages.ta_name"), change_locale_path(:ta), class: "dropdown-item" %>
                    <%= link_to t("languages.zh-CN_name"), change_locale_path(:'zh-CN'), class: "dropdown-item" %>
                    <%= link_to t("languages.ms_name"), change_locale_path(:ms), class: "dropdown-item" %>
                </div>
            </div>
        </div>

        <br>
        <%= link_to t('buttons.signup_digibank'), signup_path, class: 'button', id: 'SignUpforDigibankButton' %>
        <br>
        <%= link_to t('buttons.login'), login_path, class: 'button', id: 'LogInButton' %>
    </div>
</body>
