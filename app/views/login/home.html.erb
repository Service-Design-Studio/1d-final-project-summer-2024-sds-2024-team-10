<%= stylesheet_link_tag 'signup', media: 'all', crossorigin: 'anonymous' %>
<%= javascript_include_tag 'controllers/home', crossorigin: 'anonymous' %>

<body>
  <div class="container">
    <%= image_tag 'DBS-Bank-logo.png', alt: 'DigiBank App Home Page', class: 'resized-image' %>
    
    <div class="language-dropdown" style="position: absolute; top: 10px; right: 10px;">
      <div class="dropdown">
        <button class="dropbtn">
          <%= t("languages.#{I18n.locale}") %>
        </button>
        <div class="dropdown-content">
          <%= link_to "English", change_locale_path(:en), class: "dropdown-item" %>
          <%= link_to "தமிழ்", change_locale_path(:ta), class: "dropdown-item" %>
          <%= link_to "简体中文", change_locale_path(:'zh-CN'), class: "dropdown-item" %>
          <%= link_to "Bahasa Melayu", change_locale_path(:ms), class: "dropdown-item" %>
        </div>
      </div>
    </div>

    <br>
    <%= link_to t('buttons.signup_digibank'), signup_path, class: 'button', id: 'SignUpforDigibankButton' %>
    <br>
    <%= link_to t('buttons.login'), login_path, class: 'button', id: 'LogInButton' %>
  </div>
</body>
