<%= stylesheet_link_tag 'camera', media: 'all' %>
<%= javascript_include_tag 'controllers/tax', crossorigin: 'anonymous' %>
<body>
    <div class="container">
        <progress id="file" value="72" max="100"> 32% </progress>
        <h3>Uploaded Document</h3>
        <canvas id="canvas"></canvas>
        <img id="photo" alt="The screen capture will appear in this box.">
        <div class="boxed">
            <h3>Extracted Info</h3>
            <p id = "result">
                1. Click "Take Photo" <br>
                2. Please Wait .......
            </p>
        </div>
        <button id="nextButton" class="button">Next</button>
    </div>
</body>