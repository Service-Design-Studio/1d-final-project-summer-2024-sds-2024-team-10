<%= stylesheet_link_tag 'summary_page', media: 'all', crossorigin: 'anonymous' %>

<body>
    <div class="container">
        <%= link_to '<', proof_of_taxres_path, class: 'button', id: 'backButton' %>

        <h1>Summary Page</h1>

        <%= form_with model: @user, url: summary_update_db_path, method: :post, local: true do |f| %>
            <div class="input-group">
                <%= f.hidden_field :id, value: session[:user_id] %>

                <!-- Personal Information -->
                <label for="full_name">Full Name</label>
                <%= f.text_field :full_name, placeholder: "Full Name", required: true, value: @user.full_name %>

                <label for="display_name">User ID</label>
                <%= f.text_field :display_name, placeholder: "User ID", required: true, value: @user.display_name %>

                <label for="dob">Date of Birth</label>
                <%= f.date_field :dob, required: true, value: @user.dob %>

                <label for="gender">Gender</label>
                <%= f.text_field :gender, placeholder: "Gender", required: true, value: @user.gender %>

                <label for="nationality">Nationality</label>
                <%= f.text_field :nationality, placeholder: "Nationality", required: true, value: @user.nationality %>

                <label for="email">Email</label>
                <%= f.email_field :email, placeholder: "Email", required: true, value: @user.email %>

                <label for="phone_number">Phone Number</label>
                <%= f.telephone_field :phone_number, placeholder: "Phone Number", required: true, value: @user.phone_number %>

                <!-- Identification -->
                <label for="passport_number">Passport Number</label>
                <%= f.text_field :passport_number, placeholder: "Passport Number", required: true, value: @user.passport_number %>

                <%# <label for="nric_number">NRIC Number</label>
                <%= f.text_field :nric_number, placeholder: "NRIC Number", required: true, value: @user.nric_number %>

                <label for="fin">FIN</label>
                <%= f.text_field :fin, placeholder: "FIN", required: true, value: @user.fin %>

                <label for="passport_expiry_date">Passport Expiry Date</label>
                <%= f.date_field :passport_expiry_date, required: true, value: @user.passport_expiry_date %>

                <!-- Address -->
                <label for="country_of_residence">Country of Residence</label>
                <%= f.text_field :country_of_residence, placeholder: "Country of Residence", required: true, value: @user.country_of_residence %>
                
                <label for="block">Block</label>
                <%= f.text_field :block, placeholder: "Block", value: @user.block %>

                <label for="floor">Floor</label>
                <%= f.text_field :floor, placeholder: "Floor", value: @user.floor %>

                <label for="unit">Unit</label>
                <%= f.text_field :unit, placeholder: "Unit", required: true, value: @user.unit %>
                
                <label for="address_line_1">Address Line 1</label>
                <%= f.text_field :address_line_1, placeholder: "Address Line 1", required: true, value: @user.address_line_1 %>

                <label for="address_line_2">Address Line 2</label>
                <%= f.text_field :address_line_2, placeholder: "Address Line 2", value: @user.address_line_2 %>

                <label for="postal_code">Postal Code</label>
                <%= f.text_field :postal_code, placeholder: "Postal Code", required: true, value: @user.postal_code %>

                <!-- Employment -->
                <label for="work">Work</label>
                <%= f.text_field :work, placeholder: "Work", required: true, value: @user.work %>

                <label for="industry">Industry</label>
                <%= f.text_field :industry, placeholder: "Industry", required: true, value: @user.industry %>

                <!-- Tax Information -->
                <label for="tax_resident_country">Tax Resident Country</label>
                <%= f.text_field :tax_resident_country, placeholder: "Tax Resident Country", required: true, value: @user.tax_resident_country %>

                <label for="tin">TIN</label>
                <%= f.text_field :tin, placeholder: "TIN", value: @user.tin %>
            </div>

            <%= f.submit 'Submit', class: 'btn', id: 'submitButton' %>
        <% end %>
    </div>
</body>