<%= stylesheet_link_tag 'summary_page_copy', media: 'all', crossorigin: 'anonymous' %>

<body>
    <div class="container">
        <%= link_to '<', proof_of_taxres_path, class: 'button', id: 'backButton' %>

        <h1>Summary Page</h1>

        <%= form_with model: @user, url: summary_update_db_path, method: :post, local: true do |f| %>
            <div class="form-group">
                <%= f.hidden_field :id %>

                <!-- Personal Information -->
                <div class="input-group">
                    <label for="full_name">Full Name</label>
                    <%= f.text_field :full_name, placeholder: "John Doe"%>
                </div>

                <div class="input-group">
                    <label for="display_name">User ID</label>
                    <%= f.text_field :display_name, placeholder: "johndoe" %>
                </div>

                <div class="input-group">
                    <label for="dob">Date of Birth</label>
                    <%= f.date_field :dob, placeholder: "10 Mar 1998"%>
                </div>

                <div class="input-group">
                    <label for="gender">Gender</label>
                    <%= f.text_field :gender, placeholder: "M"%>
                </div>

                <div class="input-group">
                    <label for="nationality">Nationality</label>
                    <%= f.text_field :nationality, placeholder: "Indonesia" %>
                </div>

                <div class="input-group">
                    <label for="email">Email</label>
                    <%= f.email_field :email, placeholder: "johndoe@gmail.com" %>
                </div>

                <div class="input-group">
                    <label for="phone_number">Phone Number</label>
                    <%= f.telephone_field :phone_number, placeholder: "82765682" %>
                </div>

                <!-- Identification -->
                <div class="input-group">
                    <label for="passport_number">Passport Number</label>
                    <%= f.text_field :passport_number, placeholder: "U12345678" %>
                </div>

                <%# <div class="input-group">
                    <label for="nric_number">NRIC Number</label>
                    <%= f.text_field :nric_number, placeholder: "NRIC Number", required: true, value: @user.nric_number
                </div> %>

                <div class="input-group">
                    <label for="fin">FIN</label>
                    <%= f.text_field :fin, placeholder: "A1234567" %>
                </div>

                <div class="input-group">
                    <label for="passport_expiry_date">Passport Expiry Date</label>
                    <%= f.date_field :passport_expiry_date, placeholder: "12 Mar 2028" %>
                </div>

                <!-- Address -->
                <div class="input-group">
                    <label for="country_of_residence">Country of Residence</label>
                    <%= f.text_field :country_of_residence, placeholder: "Indonesia" %>
                </div>

                <div class="input-group">
                    <label for="block">Block</label>
                    <%= f.text_field :block, placeholder: "2" %>
                </div>

                <div class="input-group">
                    <label for="floor">Floor</label>
                    <%= f.text_field :floor, placeholder: "12" %>
                </div>

                <div class="input-group">
                    <label for="unit">Unit</label>
                    <%= f.text_field :unit, placeholder: "10" %>
                </div>

                <div class="input-group">
                    <label for="address_line_1">Address Line 1</label>
                    <%= f.text_field :address_line_1, placeholder: "Tree Road" %>
                </div>

                <div class="input-group">
                    <label for="address_line_2">Address Line 2</label>
                    <%= f.text_field :address_line_2, placeholder: "Green Condominium" %>
                </div>

                <div class="input-group">
                    <label for="postal_code">Postal Code</label>
                    <%= f.text_field :postal_code, placeholder: "532987" %>
                </div>

                <!-- Employment -->
                <div class="input-group">
                    <label for="work">Work</label>
                    <%= f.text_field :work, placeholder: "Management" %>
                </div>

                <div class="input-group">
                    <label for="industry">Industry</label>
                    <%= f.text_field :industry, placeholder: "Banking & Finance" %>
                </div>

                <div class="input-group">
                      <label for="tax_resident_country">Tax Resident Country</label>
                      <%= f.text_field :tax_resident_country, placeholder: "Indonesia" %>
                </div>

                <div class="input-group">
                      <label for="tin">TIN</label>
                      <%= f.text_field :tin, placeholder: "S12358923" %>
                 </div>
            </div>

            <%= f.submit 'Submit', class: 'btn', id: 'submitButton' %>
        <% end %>
    </div>
</body>